#!/bin/bash

echo "would you like to install hexpmg (y/n)"

read r

if [ "$r" == "y" ]; then
	if command -v axel >/dev/null; then
		echo installing...
		chmod +x ~/hexpmg/hexpmg && sudo mv ~/hexpmg/hexpmg /bin
	else
	   sudo apt install axel && echo installing... && chmod +x ~/hexpmg/hexpmg && sudo mv ~/hexpmg/hexpmg /bin
	fi
fi


if [ "$r" == "n" ]; then
	exit 1
fi






