#!/bin/bash


case $1 in

  -i)
    source ~/hexpmg/pkg-files/"$2-pkg"
    ;;

  -R)
    # if you also want to remove the folder that belongs to the program
    # type && sudo rm -r $2 after sudo rm /bin/$2
    sudo rm /bin/$2
    ;;

  -h)
    echo "usage: [ install [install a program] ]"
    ;;

  *)
   echo "error: wrong command"
   ;;
esac




